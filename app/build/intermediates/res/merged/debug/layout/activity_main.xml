<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151B32"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <com.onesmile.musicprogressbar.view.MusicProgressBar_New
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/musicProgressBar"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        
        app:pointRadius="4dp"
        app:pointWidth="2dp"
        app:roundColor="#E02433"
        app:roundProgressColor="#B539D4"
        app:roundWidth="10dip"
        app:textColor="#AAFFFFFF"
        app:textSize="50sp" />

</RelativeLayout>